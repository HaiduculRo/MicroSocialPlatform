@model FinalDAW2.Models.ApplicationUser




@using (Html.BeginForm(actionName: "EditProfile", controllerName: "Users",
        method: FormMethod.Post, routeValues: new { id = @Model.Id }))
{
    <label>Setează profilul:</label>
    <select asp-for="IsProfilePublic">
        <option value="true">Public</option>
        <option value="false">Privat</option>
    </select>

    <i class="bi bi-person"></i>
    @Html.Label("UserName", "Nume utilizator", new { @class = "" })

    <br />

    @Html.EditorFor(m => m.UserName)

    <br />

    <i class="bi bi-envelope"></i>
    @Html.Label("Email", "Email utilizator", new { @class = "" })

    <br />

    @Html.EditorFor(m => m.Email)

    <br />

    <i class="bi bi-phone"></i>
    @Html.Label("PhoneNumber", "Numar telefon")

    <br />

    @Html.EditorFor(m => m.PhoneNumber)

    <br />

    <i class="bi bi-person"></i>
    @Html.Label("FirstName", "Nume utilizator", new { @class = "" })

    <br />

    @Html.EditorFor(m => m.FirstName)

    <br />

    <i class="bi bi-person"></i>
    @Html.Label("LastName", "Prenume utilizator", new { @class = "" })

    <br />

    @Html.EditorFor(m => m.LastName)

    <br />

    <i class="bi bi-card-list"></i>

    <br />

    <button class="btn btn-sm btn-success" type="submit">Editare user</button>


}

