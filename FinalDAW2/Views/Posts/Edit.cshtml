@model FinalDAW2.Models.Post

<h2 class="text-center mt-5">Editare Postare</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "Posts",
            method: FormMethod.Post,
            routeValues: new { id = Model.Id }))
            {
                /* @Html.HiddenFor(m => m.Id)  */




                @Html.Label("Continut", "Continut Postare")
                <br />
                @Html.Editor("Continut", new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(m => m.Continut, null, new { @class = "text-danger" })
                <br />

                <br />

                <button class="btn btn-sm btn-success" type="submit">Modifica postare</button>

            }
        </div>
    </div>
</div>