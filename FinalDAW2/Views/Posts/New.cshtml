@model FinalDAW2.Models.Post

<h2 class="text-center mt-5">Adaugare postare</h2>

<br />

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Posts",
            method: FormMethod.Post))
            {

                @Html.Label("Continut", "Continut Postare")
                <br />
                @Html.TextArea("Continut", null, new { @class = "form-control" })

                @Html.ValidationMessage("Continut", null, new { @class = "text-danger" })
                <br />

                <br />



                <button class="btn btn-success" type="submit">Adauga postare</button>

            }

        </div>
    </div>
</div>